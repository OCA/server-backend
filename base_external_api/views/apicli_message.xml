<odoo>

    <record id="view_apicli_message_tree" model="ir.ui.view">
        <field name="name">apicli.message.tree</field>
        <field name="model">apicli.message</field>
        <field name="arch" type="xml">
            <tree
                decoration-bf="state == 'todo'"
                decoration-danger="state == 'error'"
                decoration-muted="state in ('cancel', 'draft')"
            >
                <field name="create_date" />
                <field name="connection_id" />
                <field name="endpoint" />
                <field name="direction" />
                <field name="state" />
                <field name="warning" />
            </tree>
        </field>
    </record>

    <record id="view_apicli_message_form" model="ir.ui.view">
        <field name="name">apicli.message.form</field>
        <field name="model">apicli.message</field>
        <field name="arch" type="xml">
            <form>
                <header>
                   <field
                        name="state"
                        widget="statusbar"
                        options="{'clickable': '1'}"
                        statusbar_visible="draft,todo,done,error,cancel"
                    />
                </header>
                <sheet>
                    <group>
                        <field name="connection_id" />
                        <field name="endpoint" />
                        <field name="processed_hook_id" />
                        <field name="direction" />
                        <field name="warnings" />
                        <field name="result" />
                        <field name="content" widget="ace" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_apicli_message_search" model="ir.ui.view">
        <field name="name">apicli.message.search</field>
        <field name="model">apicli.message</field>
        <field name="arch" type="xml">
            <search string="Apicli Message">
                <field name="endpoint" />
                <field name="connection_id" />
                <field name="state" />
                <group expand="1" string="Group By">
                    <filter
                        string="State"
                        name='state'
                        context="{'group_by':'state'}"
                    />
                    <filter
                        string="Connection"
                        name='connection_id'
                        context="{'group_by':'connection_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="action_process_messages" model="ir.actions.server">
        <field name="name">Process Messages</field>
        <field name="model_id" ref="base_external_api.model_apicli_message" />
        <field name="binding_model_id" ref="base_external_api.model_apicli_message" />
        <field name='groups_id' eval="[(4, ref('base.group_no_one'))]" />
        <field name="state">code</field>
        <field name="code">
            records.process_messages(stop_on_error=True)
        </field>
    </record>

    <record id="action_apicli_message" model="ir.actions.act_window">
        <field name="name">API Message</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">apicli.message</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_apicli_message_search" />
    </record>

    <menuitem
        id="menu_message"
        name="API Messages"
        sequence="21"
        action="action_apicli_message"
        parent="menu_api_client"
    />

</odoo>
